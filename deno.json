{
  "tasks": {
    "dev": "deno run --allow-all --watch node_modules/.bin/next dev",
    "build": "deno run --allow-all node_modules/.bin/next build",
    "start": "deno run --allow-all node_modules/.bin/next start",
    "lint": "deno run --allow-all node_modules/.bin/next lint"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "imports": {
    "next": "npm:next@^15.0.0",
    "react": "npm:react@^18.0.0",
    "react-dom": "npm:react-dom@^18.0.0",
    "neo4j-driver": "npm:neo4j-driver@^5.24.0",
    "@tanstack/react-query": "npm:@tanstack/react-query@^5.0.0",
    "zod": "npm:zod@^3.22.0",
    "clsx": "npm:clsx@^2.0.0",
    "tailwind-merge": "npm:tailwind-merge@^2.0.0",
    "tailwindcss": "npm:tailwindcss@^3.4.0",
    "autoprefixer": "npm:autoprefixer@^10.4.0"
  },
  "nodeModulesDir": "auto",
  "lock": false
} 